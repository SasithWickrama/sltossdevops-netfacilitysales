<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title" parent="parent">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listtitleText" parent="parent">
        <item name="android:textSize">@dimen/listtitleTextSize</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listdpText" parent="parent">
        <item name="android:textSize">@dimen/listDpTextSize</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listSubText" parent="parent">
        <item name="android:textSize">@dimen/listSubTextSize</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/flourisentred</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="devopsText" parent="parent">
        <item name="android:textSize">@dimen/listSubTextSize</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textviewText" parent="parent">
        <item name="android:textSize">@dimen/textviewTextSize</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginCard" parent="parent"></style>

    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingRight">@dimen/loginViewsMargin</item>
        <item name="android:paddingLeft">@dimen/loginViewsMargin</item>
        <item name="android:paddingTop">@dimen/loginViewsMargin</item>
    </style>

    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
    </style>

    <style name="modifiedSpinner" parent="parent">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--onboarding designs-->

    <style name="mainlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>


    <style name="cardViewParent" parent="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="loginActivityCard" parent="parent">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/loginViewsMargin</item>
        <item name="android:layout_marginBottom">@dimen/loginViewsMargin</item>
        <item name="android:background">@color/whiteCardColor</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
